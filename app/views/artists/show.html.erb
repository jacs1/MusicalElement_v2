<%# binding.pry %>
<div class="wrap">
<div class="content container-fluid">
    <div class="row-fluid hidden-print">
        <!-- <div class="span12"> -->
            <h2 class="page-title" style="position: relative; z-index: 3"><%= @artist.name %> <small>Print optimized page</small></h2>
        <!-- </div> -->
    </div>
    <div class="row-fluid">
        <div class="span12">
            <section class="widget">
                <div class="body no-margin">
                  <div id="myCarousel" class="carousel slide">
                    <ol class="carousel-indicators">
                      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                      <li data-target="#myCarousel" data-slide-to="1"></li>
                      <li data-target="#myCarousel" data-slide-to="2"></li>
                    </ol>
                    <!-- Carousel items -->
                    <div class="carousel-inner">
                      <div class="active item">
                          <a href="/users/sign_up"><img src="<%= image_path('01.jpg') %>"> </a>
                        </div>
                        <div class="item">
                          <a href="/users/sign_up"><img src="<%= image_path('02.jpg') %>"> </a>
                        </div>
                        <div class="item">
                          <a href="/users/sign_up"><img src="<%= image_path('03.jpg') %>"> </a>
                        </div>
                    </div>
                    <!-- Carousel nav -->
                    <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
                    <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
                  </div>
                    <hr>

                    <div class="row-fluid">
                        <div class="span12">
                            <!-- <section class="widget widget-tabs"> -->
                                <header>
                                    <ul class="nav nav-tabs">
                                        <li class="active">
                                            <a href="#tracks" data-toggle="tab">Albums\Tracks</a>
                                        </li>
                                        <li>
                                            <a href="#bio" data-toggle="tab">Biography</a>
                                        </li>
                                        <li>
                                            <a href="#mixes" data-toggle="tab">Mixes</a>
                                        </li>
                                        <li>
                                            <a href="#btm" data-toggle="tab">BTM (Behind The Music)</a>
                                        </li>
                                    </ul>
                                </header>
                                <div class="body tab-content">
                                    <div id="tracks" class="tab-pane active clearfix">
                                        <% @artist.albums.each do |album| %>
                                        <%= render :partial => 'albums/show', :locals => {:artist => @artist, :album => album} %>
                                        <% end %>
                                    </div>
                                    <div id="report" class="tab-pane">
                                        <div style="font-size: 240px; text-align: center; color: #56bc76; text-shadow: 2px 2px 2px #000000; height: 280px;">
                                            <i class="icon-picture"></i>
                                        </div>
                                    </div>
                                    <div id="bio" class="tab-pane clearfix">
                                        <h2>Tabs-enabled widget</h2>
                                        <p>Bio shit goes here</p>
                                    </div>
                                    <div id="mixes" class="tab-pane clearfix">
                                        <h2>Tabs-enabled widget</h2>
                                        <p>Mix data goes here</p>
                                    </div>
                                    <div id="btm" class="tab-pane clearfix">
                                        <h2>Tabs-enabled widget</h2>
                                        <p>Behind the music</p>
                                    </div>

                                </div>
                            <!-- </section> -->
                        </div>
                    </div>

                </div>
            </section>
        </div>
    </div>
</div>
</div>